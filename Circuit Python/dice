from adafruit_circuitplayground import cp
import random
import time

while True:
    if cp.button_a:
        num = random.randint(1, 10)
        cp.pixels.fill((0, 0, 0))
        for i in range(num):
            cp.pixels[i] = (0, 50, 0)
        time.sleep(0.3)

    if cp.button_b:
        cp.pixels.fill((0, 0, 0))
        time.sleep(0.3)
