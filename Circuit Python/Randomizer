import random
import time
from adafruit_circuitplayground import cp

def random_color():
    return random.randint(0, 255), random.randint(0, 255), random.randint(0, 255)

while True:
    if cp.acceleration[0] > 10 or cp.acceleration[1] > 10 or cp.acceleration[2] > 10:
        for i in range(10):
            x, y, z = random_color()
            cp.pixels[i] = (x, y, z)
        time.sleep(1)
    else:
        cp.pixels.fill((0, 0, 0))


   
           
        

